<h1>Listing Notes</h1>
<%-# new_note_path goes to the new.html.erb view %>
<%= link_to 'New Note', new_note_path %>
<%-# create table for index page %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
<%-# note is the :id %>
  <% @notes.each do |note| %>
  <tr>
    <td> <%= note.title %></td>
    <td> <%= note.text %></td>
    <td> <%= link_to 'Show', note_path(note) %></td>
    <td> <%= link_to 'Edit', edit_note_path(note) %></td>
    <%# need to use button_to instead of link_to because we're using rails 4.1+, an authenticity token is missing if we use link_to%>
    <td> <%= button_to 'Destroy', note_path(note),
                     method: :delete#,
      #confirm doesn't work :( because button_to skips js elements
              #       data: { confirm: 'Are you sure?' }
            #link_to 'Destroy', note_path(note),
             #       :method => :delete,
              #     :data => { confirm: 'Are you sure?' }
    %></td>
  </tr>
  <% end %>
</table>